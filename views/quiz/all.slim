section#all
    div.container
        h2.all Alla quiz 
        ul.quiz_list 
            - quizzes.each do |quiz|
                li 
                    div.top
                        div.left
                            h2.quiz_name = quiz["name"]
                            button.button.desc type="button" View description
                            a.button href="/quiz/#{quiz['id']}/edit" Edit
                        a.play href="/quiz/#{quiz['id']}" Play
